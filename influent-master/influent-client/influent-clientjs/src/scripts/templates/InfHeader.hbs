<div id="header-content" class="navbar navbar-default navbar-fixed-top" role="navigation">
	<div class="container-fluid">
		<div class="navbar-header">
			<button id="influent-header-toggle" type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<div id="influent-header-brand" class="navbar-brand"></div>
		</div>
		<div class="nav navbar-nav navbar-center">
			<div id="influent-header-data-source" class="influent-header-element">{{dataSource}}</div>
		</div>
		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav navbar-right">
				{{#each menus}}
					{{!-- If the element has children then it's a menu, otherwise it's a link --}}
					{{#if this.children}}
						<li class="dropdown">
							<a data-target="#" title="{{this.tooltip}}" class="dropdown-toggle" data-toggle="dropdown">{{#if this.icon}}<span class="influent-ui-icon {{this.icon}}"></span>{{/if}}{{this.text}}<span class="caret"></span></a>

							<ul class="dropdown-menu" role="menu">
								{{#each this.children}}
									{{!-- If the element has text then it's an item in the menu, otherwise it's a divider --}}
									{{#if this.text}}
										<li class="{{isElementDisabled this}}">
											<a data-target="#" id="{{this.id}}" {{isElementDisabled this}}>{{#if this.icon}}<span class="influent-ui-icon {{this.icon}}"></span>{{/if}}{{this.text}}</a>
										</li>
									{{else}}
										<li class="divider"></li>
									{{/if}}
								{{/each}}
							</ul>
						</li>
					{{else}}
						<li>
							<a href="#" class="influent-header-element {{isElementDisabled this}}"  title="{{this.tooltip}}" {{isElementDisabled this}}>{{#if this.icon}}<span class="influent-ui-icon {{this.icon}}"></span>{{/if}}{{this.text}}</a>
						</li>
					{{/if}}

					{{#unless @last}}
						<li class="influent-header-divider"></li>
					{{/unless}}
				{{/each}}
			</ul>
		</div><!--/.nav-collapse -->
	</div>
</div>
